/* 水平间距 */
.view-box {
  margin-bottom: 120rpx;
  background-color: #f6f6f6;
}
.view-box swiper {
  height: 560rpx;
  margin-bottom: 8rpx;
}
.view-box swiper .swiper-item,
.view-box swiper image {
  width: 100%;
  height: 100%;
}
.view-box .goods_name_price {
  margin-top: 8rpx;
  width: 100%;
  height: 140rpx;
  background-color: #ffffff;
}
.view-box .goods_name_price .name {
  width: 65%;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 31rpx;
  text-align: center;
  background-color: #ffffff;
  float: left;
}
.view-box .goods_name_price .price {
  width: 35%;
  height: 120rpx;
  font-size: 50rpx;
  color: red;
  text-align: center;
  line-height: 120rpx;
  background-color: #ffffff;
  float: right;
}
.view-box .maijiainfo {
  margin-top: 8rpx;
  width: 100%;
  height: 100rpx;
  background-color: ffffff;
}
.view-box .maijiainfo .left {
  float: left;
  width: 400rpx;
  height: 100rpx;
  background-color: white;
}
.view-box .maijiainfo .left image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50px;
  float: left;
}
.view-box .maijiainfo .left .name {
  background-color: white;
  float: left;
  line-height: 100rpx;
  font-size: 30rpx;
  width: 300rpx;
  height: 100rpx;
}
.view-box .maijiainfo .right {
  color: red;
  float: right;
  width: calc(100% - 410rpx);
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
  padding-right: 10rpx;
  background-color: white;
}
.view-box .goods-nav {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}


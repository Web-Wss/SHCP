/* 水平间距 */
.home-box {
  background-color: #f6f6f6;
}
.home-box swiper {
  height: 360rpx;
  margin-bottom: 8rpx;
}
.home-box swiper .swiper-item,
.home-box swiper image {
  width: 100%;
  height: 100%;
}
.home-box .uni-noticebar {
  margin-bottom: 0;
}
.home-box .cate-box {
  background-color: white;
  display: flex;
  flex-wrap: wrap;
  margin: 8rpx 0rpx;
  justify-content: center;
}
.home-box .cate-box .cate-item {
  width: 25%;
  height: 150rpx;
  text-align: center;
}
.home-box .cate-box .cate-item image {
  margin-top: 25rpx;
  width: 60rpx;
  height: 60rpx;
}
.home-box .cate-box .cate-item .cate-item-title {
  font-size: 24rpx;
}
.home-box .goodGoods-wz {
  background-color: #ffffff;
  text-align: center;
}
.home-box .goodGoods {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.home-box .goodGoods .goods-item {
  border-radius: 25px;
  margin: 8rpx;
  background-color: #fff;
  width: 31%;
  height: 320rpx;
}
.home-box .goodGoods .goods-item image {
  border-radius: 25px;
  width: 100%;
  height: 200rpx;
}
.home-box .goodGoods .goods-item .goods-title {
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: center;
  font-size: 22rpx;
  height: 60rpx;
}
.home-box .goodGoods .goods-item .goods-price {
  text-align: center;
  font-size: 30rpx;
  color: red;
}

